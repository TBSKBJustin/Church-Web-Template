---
interface Props {
  title: string;
  lang?: 'zh' | 'en';
}

const { title, lang = 'zh' } = Astro.props;

// 菜单项根据语言动态生成
const menuItems = lang === 'zh' 
  ? [
      { href: '/', label: '首頁' },
      { href: '/about', label: '關於我們' },
      { href: '/team', label: '我們的團隊' },
      { href: '/gathering', label: '聚會' },
      { href: '/posts', label: '貼文' },
      { href: '/contact', label: '聯絡我們' },
    ]
  : [
      { href: '/en/', label: 'Home' },
      { href: '/en/about', label: 'About Us' },
      { href: '/en/team', label: 'Our Team' },
      { href: '/en/gathering', label: 'Gatherings' },
      { href: '/en/posts', label: 'Posts' },
      { href: '/en/contact', label: 'Contact Us' },
    ];

const logoText = '教會名稱 Church Name';
const langToggleText = lang === 'zh' ? 'English' : '國語';
const langToggleHref = lang === 'zh' ? '/en/' : '/';
---

<!doctype html>
<html lang="zh-TW">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <nav class="navbar">
        <div class="container">
          <a href={lang === 'zh' ? '/' : '/en/'} class="logo">{logoText}</a>
          <ul class="nav-menu">
            {menuItems.map(item => (
              <li><a href={item.href}>{item.label}</a></li>
            ))}
            <li><a href="#" target="_blank" class="youtube-link">YouTube</a></li>
            <li><a href={langToggleHref} class="lang-toggle">{langToggleText}</a></li>
          </ul>
          <button class="mobile-menu-toggle" aria-label="開關選單">
            <span class="hamburger-icon"></span>
          </button>
        </div>
      </nav>
    </header>

    <slot />

    <footer class="site-footer">
      <div class="container">
        <div class="footer-grid">
          <div class="footer-section">
            <h3>教會名稱 Church Name</h3>
            <p>在此添加您教會的簡短描述</p>
          </div>
          <div class="footer-section">
            <h3>快速連結</h3>
            <ul>
              <li><a href="/about">關於我們</a></li>
              <li><a href="/team">我們的團隊</a></li>
              <li><a href="/gathering">聚會資訊</a></li>
              <li><a href="/posts">最新貼文</a></li>
            </ul>
          </div>
          <div class="footer-section">
            <h3>聯絡資訊</h3>
            <p>[您的教會地址]</p>
            <p>Email: church@example.com</p>
          </div>
          <div class="footer-section">
            <h3>追蹤我們</h3>
            <div class="social-links">
              <a href="#" target="_blank" rel="noopener noreferrer">YouTube</a>
            </div>
          </div>
        </div>
        <div class="footer-bottom">
          <p>&copy; {new Date().getFullYear()} 教會名稱. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // 手機選單切換
      const toggle = document.querySelector('.mobile-menu-toggle');
      const menu = document.querySelector('.nav-menu');
      
      toggle?.addEventListener('click', () => {
        menu?.classList.toggle('active');
        toggle?.classList.toggle('active');
      });

      // 點擊菜單項後關閉菜單
      const menuItems = document.querySelectorAll('.nav-menu a');
      menuItems.forEach(item => {
        item.addEventListener('click', () => {
          menu?.classList.remove('active');
          toggle?.classList.remove('active');
        });
      });
    </script>
  </body>
</html>

<style is:global>
  :root {
    --color-bg-main: #F6F4F1;
    --color-bg-soft: #EAE7E3;
    --color-text-main: #3A3A3A;
    --color-text-muted: #8A8A8A;
    --color-accent: #D9898C;
    --color-accent-hover: #C86E72;
    --color-border: #E0DED9;

    /* 兼容旧变量名 */
    --primary-color: #D9898C;
    --primary-dark: #C86E72;
    --text-color: #3A3A3A;
    --text-light: #8A8A8A;
    --border-color: #E0DED9;
    --background-light: #EAE7E3;
    --background-lighter: #F6F4F1;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans TC', 'Helvetica Neue', Arial, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background: var(--background-lighter);
  }

  /* Header Styles */
  .site-header {
    background: rgba(120, 110, 100, 0.35);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 2px 8px rgba(58, 58, 58, 0.08);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .navbar {
    padding: 1rem 2rem;
  }

  .navbar .container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }

  .logo {
    font-size: 1.3rem;
    font-weight: 700;
    color: white;
    text-decoration: none;
    letter-spacing: -0.5px;
    flex-shrink: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
    margin: 0;
    padding: 0;
    margin-left: auto;
  }

  .nav-menu a {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s, text-shadow 0.3s;
    position: relative;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.6);
  }

  .nav-menu a::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: white;
    transition: width 0.3s;
  }

  .nav-menu a:hover {
    color: white;
    text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.8);
  }

  .nav-menu a:hover::after {
    width: 100%;
  }

  .youtube-link {
    background: var(--color-accent);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    color: white !important;
    text-shadow: none !important;
    transition: all 0.3s;
  }

  .youtube-link:hover {
    background: var(--color-accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(217, 137, 140, 0.4);
  }

  .youtube-link::after {
    display: none;
  }

  .lang-toggle {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    color: white !important;
    text-shadow: none !important;
    transition: all 0.3s;
    font-size: 0.9rem;
  }

  .lang-toggle:hover {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }

  .lang-toggle::after {
    display: none;
  }

  .mobile-menu-toggle {
    display: none;
    background: rgba(255, 255, 255, 0.15);
    border: 2px solid rgba(255, 255, 255, 0.3);
    padding: 0;
    border-radius: 8px;
    color: white;
    cursor: pointer;
    transition: all 0.3s;
    backdrop-filter: blur(5px);
    width: 44px;
    height: 44px;
    position: relative;
    align-items: center;
    justify-content: center;
  }

  .mobile-menu-toggle:hover {
    background: rgba(255, 255, 255, 0.25);
    border-color: rgba(255, 255, 255, 0.5);
  }

  .mobile-menu-toggle:active {
    transform: scale(0.95);
  }

  .hamburger-icon {
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 24px;
    height: 2px;
    background: white;
    transition: all 0.3s;
  }

  .hamburger-icon::before,
  .hamburger-icon::after {
    content: '';
    position: absolute;
    left: 0;
    width: 24px;
    height: 2px;
    background: white;
    transition: all 0.3s;
  }

  .hamburger-icon::before {
    top: -8px;
  }

  .hamburger-icon::after {
    top: 8px;
  }

  .mobile-menu-toggle.active .hamburger-icon {
    background: transparent;
    transform: translate(-50%, -50%);
  }

  .mobile-menu-toggle.active .hamburger-icon::before {
    top: 0;
    transform: rotate(45deg);
  }

  .mobile-menu-toggle.active .hamburger-icon::after {
    top: 0;
    transform: rotate(-45deg);
  }

  /* Footer Styles */
  .site-footer {
    background: linear-gradient(135deg, rgba(120, 110, 100, 0.9) 0%, rgba(100, 90, 80, 0.95) 100%);
    color: var(--color-bg-main);
    padding: 3rem 2rem 1rem;
    margin-top: 4rem;
  }

  .site-footer .container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    margin-bottom: 1rem;
    color: white;
    font-size: 1.1rem;
  }

  .footer-section p {
    margin-bottom: 0.5rem;
    opacity: 0.9;
    line-height: 1.8;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section ul li {
    margin-bottom: 0.5rem;
  }

  .footer-section a {
    color: white;
    text-decoration: none;
    opacity: 0.85;
    transition: opacity 0.3s, transform 0.2s;
    display: inline-block;
  }

  .footer-section a:hover {
    opacity: 1;
    transform: translateX(3px);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-links a {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    transition: background 0.3s;
  }

  .social-links a:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: none;
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    opacity: 0.8;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .navbar {
      padding: 0.75rem 1rem;
    }

    .logo {
      font-size: 0.95rem;
      line-height: 1.3;
      max-width: calc(100% - 60px);
    }

    .mobile-menu-toggle {
      display: flex;
    }

    .nav-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: rgba(120, 110, 100, 0.98);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      flex-direction: column;
      padding: 1rem;
      box-shadow: 0 4px 8px rgba(58, 58, 58, 0.2);
      gap: 0.5rem;
    }

    .nav-menu li {
      width: 100%;
    }

    .nav-menu a {
      display: block;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      transition: background 0.3s;
    }

    .nav-menu a:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .youtube-link {
      text-align: center;
    }

    .nav-menu.active {
      display: flex;
    }

    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
