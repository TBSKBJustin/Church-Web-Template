<script>
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const sortSelect = document.getElementById('sortSelect') as HTMLSelectElement;
  const postsGrid = document.getElementById('postsGrid') as HTMLElement;
  const cards = Array.from(postsGrid?.querySelectorAll('.video-card') || []);
  const filterBtns = document.querySelectorAll('.filter-btn');
  const advancedFilterToggle = document.getElementById('advancedFilterToggle') as HTMLButtonElement;
  const filtersSection = document.getElementById('filtersSection') as HTMLElement;
  const itemsPerPageSelect = document.getElementById('itemsPerPage') as HTMLSelectElement;
  const resultsInfo = document.getElementById('resultsInfo') as HTMLElement;
  const prevPageBtn = document.getElementById('prevPage') as HTMLButtonElement;
  const nextPageBtn = document.getElementById('nextPage') as HTMLButtonElement;
  const pageNumbers = document.getElementById('pageNumbers') as HTMLElement;

  // ç­›é€‰å™¨çŠ¶æ€
  const filters = {
    search: '',
    type: 'all',
    service: 'all',
    speaker: 'all',
    series: 'all',
    book: 'all'
  };

  // åˆ†é¡µçŠ¶æ€
  let currentPage = 1;
  let itemsPerPage = 20;
  let filteredCards: HTMLElement[] = [];

  // é«˜çº§ç­›é€‰toggle
  advancedFilterToggle?.addEventListener('click', () => {
    const isHidden = filtersSection.style.display === 'none';
    filtersSection.style.display = isHidden ? 'block' : 'none';
    advancedFilterToggle.textContent = isHidden ? 'é«˜ç´šç¯©é¸' : 'é«˜ç´šç¯©é¸';
  });

  // æ¯é¡µæ˜¾ç¤ºæ•°é‡æ”¹å˜
  itemsPerPageSelect?.addEventListener('change', () => {
    itemsPerPage = parseInt(itemsPerPageSelect.value);
    currentPage = 1;
    updatePagination();
  });

  // æ’åºåŠŸèƒ½
  sortSelect?.addEventListener('change', () => {
    const sortValue = sortSelect.value;
    const sortedCards = [...cards].sort((a, b) => {
      const dateA = parseInt((a as HTMLElement).dataset.date || '0');
      const dateB = parseInt((b as HTMLElement).dataset.date || '0');
      return sortValue === 'newest' ? dateB - dateA : dateA - dateB;
    });

    // é‡æ–°æ’åˆ—DOM
    sortedCards.forEach(card => postsGrid.appendChild(card));
    
    // åº”ç”¨å½“å‰ç­›é€‰
    applyFilters();
  });

  // æœç´¢åŠŸèƒ½
  searchInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    filters.search = target.value.toLowerCase();
    updateAvailableFilters();
    applyFilters();
  });

  // ç­›é€‰æŒ‰é’®äº‹ä»¶
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const element = btn as HTMLElement;
      const filterType = element.dataset.filterType;
      const value = element.dataset.value;

      if (!filterType || !value) return;

      // æ›´æ–°åŒç±»æŒ‰é’®çš„activeçŠ¶æ€
      const sameTypeButtons = document.querySelectorAll(`[data-filter-type="${filterType}"]`);
      sameTypeButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // æ›´æ–°ç­›é€‰çŠ¶æ€
      filters[filterType as keyof typeof filters] = value;
      
      // æ›´æ–°å…¶ä»–ç­›é€‰å™¨çš„å¯ç”¨é€‰é¡¹
      updateAvailableFilters();
      
      applyFilters();
    });
  });

  // æ›´æ–°ç­›é€‰å™¨å¯ç”¨é€‰é¡¹
  function updateAvailableFilters() {
    // ä¸ºæ¯ä¸ªç­›é€‰ç±»å‹åˆ†åˆ«è®¡ç®—å¯ç”¨é€‰é¡¹
    updateFilterOptionsFor('type');
    updateFilterOptionsFor('service');
    updateFilterOptionsFor('speaker');
    updateFilterOptionsFor('series');
    updateFilterOptionsFor('book');
  }

  // ä¸ºç‰¹å®šç­›é€‰ç±»å‹æ›´æ–°å¯ç”¨é€‰é¡¹
  function updateFilterOptionsFor(targetFilterType: string) {
    // æ”¶é›†ç¬¦åˆå…¶ä»–ç­›é€‰æ¡ä»¶çš„æ–‡ç« ï¼ˆæ’é™¤å½“å‰æ­£åœ¨æ›´æ–°çš„ç­›é€‰ç±»å‹ï¼‰
    const availableCards = cards.filter(card => {
      const element = card as HTMLElement;
      const title = element.querySelector('.video-title')?.textContent?.toLowerCase() || '';
      const description = element.querySelector('.video-description')?.textContent?.toLowerCase() || '';
      
      // æœç´¢åŒ¹é…
      const matchesSearch = !filters.search || 
        title.includes(filters.search) || 
        description.includes(filters.search);

      // å„ç±»ç­›é€‰åŒ¹é…ï¼ˆæ’é™¤ç›®æ ‡ç­›é€‰ç±»å‹ï¼‰
      const typeValues = (element.dataset.type || '').split(',').filter(v => v.trim());
      const serviceValues = (element.dataset.service || '').split(',').filter(v => v.trim());
      const speakerValues = (element.dataset.speaker || '').split(',').filter(v => v.trim());
      const seriesValues = (element.dataset.series || '').split(',').filter(v => v.trim());
      const bookValues = (element.dataset.book || '').split(',').filter(v => v.trim());
      
      const matchesType = targetFilterType === 'type' || filters.type === 'all' || typeValues.includes(filters.type);
      const matchesService = targetFilterType === 'service' || filters.service === 'all' || serviceValues.includes(filters.service);
      const matchesSpeaker = targetFilterType === 'speaker' || filters.speaker === 'all' || speakerValues.includes(filters.speaker);
      const matchesSeries = targetFilterType === 'series' || filters.series === 'all' || seriesValues.includes(filters.series);
      const matchesBook = targetFilterType === 'book' || filters.book === 'all' || bookValues.includes(filters.book);

      return matchesSearch && matchesType && matchesService && matchesSpeaker && matchesSeries && matchesBook;
    });

    // æ”¶é›†è¯¥ç­›é€‰ç±»å‹çš„å¯ç”¨å€¼ï¼ˆå¤„ç†é€—å·åˆ†éš”çš„å¤šå€¼ï¼‰
    const availableValues = new Set<string>();
    availableCards.forEach(card => {
      const element = card as HTMLElement;
      const value = element.dataset[targetFilterType];
      if (value) {
        // åˆ†å‰²é€—å·åˆ†éš”çš„å€¼å¹¶æ·»åŠ åˆ°é›†åˆä¸­
        value.split(',').filter(v => v.trim()).forEach(v => availableValues.add(v.trim()));
      }
    });

    // æ›´æ–°æŒ‰é’®æ˜¾ç¤º
    updateFilterButtons(targetFilterType, availableValues);
  }

  // æ›´æ–°ç‰¹å®šç±»å‹ç­›é€‰å™¨çš„æŒ‰é’®æ˜¾ç¤º
  function updateFilterButtons(filterType: string, availableValues: Set<string>) {
    const buttons = document.querySelectorAll(`[data-filter-type="${filterType}"]`);
    buttons.forEach(btn => {
      const element = btn as HTMLElement;
      const value = element.dataset.value;
      
      // "å…¨éƒ¨"æŒ‰é’®å§‹ç»ˆæ˜¾ç¤º
      if (value === 'all') {
        element.style.display = '';
        return;
      }
      
      // å…¶ä»–æŒ‰é’®æ ¹æ®æ˜¯å¦åœ¨å¯ç”¨å€¼ä¸­å†³å®šæ˜¾ç¤º/éšè—
      if (value && availableValues.has(value)) {
        element.style.display = '';
      } else {
        element.style.display = 'none';
      }
    });
  }

  // åº”ç”¨æ‰€æœ‰ç­›é€‰
  function applyFilters() {
    filteredCards = [];
    
    cards.forEach(card => {
      const element = card as HTMLElement;
      const title = element.querySelector('.video-title')?.textContent?.toLowerCase() || '';
      const description = element.querySelector('.video-description')?.textContent?.toLowerCase() || '';
      
      // æœç´¢åŒ¹é…
      const matchesSearch = !filters.search || 
        title.includes(filters.search) || 
        description.includes(filters.search);

      // å„ç±»ç­›é€‰åŒ¹é…ï¼ˆå¤„ç†é€—å·åˆ†éš”çš„å¤šå€¼ï¼‰
      const typeValues = (element.dataset.type || '').split(',').filter(v => v.trim());
      const serviceValues = (element.dataset.service || '').split(',').filter(v => v.trim());
      const speakerValues = (element.dataset.speaker || '').split(',').filter(v => v.trim());
      const seriesValues = (element.dataset.series || '').split(',').filter(v => v.trim());
      const bookValues = (element.dataset.book || '').split(',').filter(v => v.trim());
      
      const matchesType = filters.type === 'all' || typeValues.includes(filters.type);
      const matchesService = filters.service === 'all' || serviceValues.includes(filters.service);
      const matchesSpeaker = filters.speaker === 'all' || speakerValues.includes(filters.speaker);
      const matchesSeries = filters.series === 'all' || seriesValues.includes(filters.series);
      const matchesBook = filters.book === 'all' || bookValues.includes(filters.book);

      // æ”¶é›†ç¬¦åˆæ¡ä»¶çš„å¡ç‰‡
      if (matchesSearch && matchesType && matchesService && matchesSpeaker && matchesSeries && matchesBook) {
        filteredCards.push(element);
      }
    });

    // é‡ç½®åˆ°ç¬¬ä¸€é¡µ
    currentPage = 1;
    updatePagination();
  }

  // æ›´æ–°åˆ†é¡µæ˜¾ç¤º
  function updatePagination() {
    const totalItems = filteredCards.length;
    const totalPages = Math.ceil(totalItems / itemsPerPage);
    const startIndex = (currentPage - 1) * itemsPerPage;
    const endIndex = Math.min(startIndex + itemsPerPage, totalItems);

    // éšè—æ‰€æœ‰å¡ç‰‡
    cards.forEach(card => {
      (card as HTMLElement).style.display = 'none';
    });

    // åªæ˜¾ç¤ºå½“å‰é¡µçš„å¡ç‰‡
    for (let i = startIndex; i < endIndex; i++) {
      filteredCards[i].style.display = 'block';
    }

    // æ›´æ–°ç»“æœä¿¡æ¯
    if (totalItems === 0) {
      resultsInfo.textContent = 'æ²’æœ‰æ‰¾åˆ°ç›¸é—œè²¼æ–‡';
    } else {
      resultsInfo.textContent = `é¡¯ç¤º ${startIndex + 1}-${endIndex} / å…± ${totalItems} ç¯‡`;
    }

    // æ›´æ–°åˆ†é¡µæŒ‰é’®çŠ¶æ€
    prevPageBtn.disabled = currentPage === 1;
    nextPageBtn.disabled = currentPage === totalPages || totalPages === 0;

    // ç”Ÿæˆé¡µç æŒ‰é’®
    renderPageNumbers(totalPages);
  }

  // æ¸²æŸ“é¡µç 
  function renderPageNumbers(totalPages: number) {
    pageNumbers.innerHTML = '';
    
    if (totalPages <= 1) return;

    // æœ€å¤šæ˜¾ç¤º7ä¸ªé¡µç 
    let startPage = Math.max(1, currentPage - 3);
    let endPage = Math.min(totalPages, currentPage + 3);

    if (currentPage <= 4) {
      endPage = Math.min(7, totalPages);
    }
    if (currentPage > totalPages - 4) {
      startPage = Math.max(1, totalPages - 6);
    }

    // ç¬¬ä¸€é¡µ
    if (startPage > 1) {
      addPageButton(1);
      if (startPage > 2) {
        pageNumbers.innerHTML += '<span class="page-ellipsis">...</span>';
      }
    }

    // ä¸­é—´é¡µç 
    for (let i = startPage; i <= endPage; i++) {
      addPageButton(i);
    }

    // æœ€åä¸€é¡µ
    if (endPage < totalPages) {
      if (endPage < totalPages - 1) {
        pageNumbers.innerHTML += '<span class="page-ellipsis">...</span>';
      }
      addPageButton(totalPages);
    }
  }

  function addPageButton(page: number) {
    const btn = document.createElement('button');
    btn.className = `page-number ${page === currentPage ? 'active' : ''}`;
    btn.textContent = page.toString();
    btn.addEventListener('click', () => {
      currentPage = page;
      updatePagination();
      postsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
    pageNumbers.appendChild(btn);
  }

  // ä¸Šä¸€é¡µ
  prevPageBtn?.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      updatePagination();
      postsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });

  // ä¸‹ä¸€é¡µ
  nextPageBtn?.addEventListener('click', () => {
    const totalPages = Math.ceil(filteredCards.length / itemsPerPage);
    if (currentPage < totalPages) {
      currentPage++;
      updatePagination();
      postsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });

  // åˆå§‹åŒ–
  updateAvailableFilters();
  applyFilters();
</script>

