---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  
  // 收集所有可能的标签值
  const allTags = new Set<string>();
  
  allPosts.forEach(post => {
    // 添加常规标签
    post.data.tags?.forEach(tag => allTags.add(tag));
    // 添加 type
    post.data.type?.forEach(item => allTags.add(item));
    // 添加 service
    post.data.service?.forEach(item => allTags.add(item));
    // 添加 speaker
    post.data.speaker?.forEach(item => allTags.add(item));
    // 添加 series
    post.data.series?.forEach(item => allTags.add(item));
    // 添加 book
    post.data.book?.forEach(item => allTags.add(item));
  });
  
  return Array.from(allTags).map((tag: string) => ({
    params: { tag },
    props: {
      posts: allPosts.filter(post => 
        post.data.tags?.includes(tag) ||
        post.data.type?.includes(tag) ||
        post.data.service?.includes(tag) ||
        post.data.speaker?.includes(tag) ||
        post.data.series?.includes(tag) ||
        post.data.book?.includes(tag)
      ),
      tag,
    },
  }));
}

const { posts, tag } = Astro.props;
const sortedPosts = posts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout title={`標籤：${tag} - 教會名稱`}>
  <main>
    <div class="page-header">
      <div class="container">
        <h1>#{tag}</h1>
        <p>共 {posts.length} 篇貼文</p>
      </div>
    </div>

    <section class="posts-section">
      <div class="container">
        <div class="posts-grid">
          {sortedPosts.map(post => (
            <article class="post-card">
              {post.data.thumbnail && (
                <a href={`/posts/${post.slug}`}>
                  <img src={post.data.thumbnail} alt={post.data.title} />
                </a>
              )}
              <div class="post-content">
                <time datetime={post.data.publishDate.toISOString()}>
                  {post.data.publishDate.toLocaleDateString('zh-TW')}
                </time>
                <h2>
                  <a href={`/posts/${post.slug}`}>{post.data.title}</a>
                </h2>
                {post.data.excerpt && <p>{post.data.excerpt}</p>}
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-header {
    background: #2C5F8D;
    color: white;
    padding: 8rem 2rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
  }

  .posts-section {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    background: white;
    transition: box-shadow 0.3s;
  }

  .post-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .post-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-content time {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .post-content h2 {
    margin: 0.5rem 0 1rem;
  }

  .post-content h2 a {
    color: var(--color-text-main);
    text-decoration: none;
  }

  .post-content h2 a:hover {
    color: var(--color-accent);
  }

  .post-content p {
    color: var(--color-text-muted);
    line-height: 1.6;
  }
</style>
