---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Contact Us - Church Name" lang="en">
  <main>
    <div class="page-header" style="background: url('/images/contact-bg.jpg') center/cover;">
      <div class="container">
        <h1>Contact Us</h1>
        <p>We'd Love to Hear From You</p>
      </div>
    </div>

    <section class="contact-section">
      <div class="container">
        <div class="content-wrapper">
          <!-- Contact Information -->
          <div class="contact-info-block">
            <h2>Contact Information</h2>
            
            <div class="info-grid">
              <!-- Church Address -->
              <div class="info-card">
                <h3>Address</h3>
                <p>[Your Church Address]</p>
              </div>

              <!-- Email -->
              <div class="info-card">
                <h3>Email</h3>
                <p><a href="mailto:church@example.com">church@example.com</a></p>
              </div>

              <!-- Office Hours -->
              <div class="info-card">
                <h3>Office Hours</h3>
                <p>Monday – Friday: 9:00 AM – 5:00 PM</p>
                <p>Saturday & Sunday: By appointment</p>
              </div>
            </div>

            <!-- Pastor Contact -->
            <div class="pastor-section">
              <h3>Senior Pastor</h3>
              <p><strong>[Pastor Name]</strong></p>
              <p>Email: <a href="mailto:church@example.com">church@example.com</a></p>
              <p>Phone: <a href="tel:+1234567890">[Phone Number]</a></p>
            </div>
          </div>

          <!-- Contact Form -->
          <div class="contact-form-block">
            <h2>Send us a Message</h2>
            <form class="contact-form" method="POST" data-netlify="true">
              <div class="form-group">
                <label for="name">Name *</label>
                <input type="text" id="name" name="name" required>
              </div>

              <div class="form-group">
                <label for="email">Email *</label>
                <input type="email" id="email" name="email" required>
              </div>

              <div class="form-group">
                <label for="phone">Phone</label>
                <input type="tel" id="phone" name="phone">
              </div>

              <div class="form-group">
                <label for="subject">Subject *</label>
                <input type="text" id="subject" name="subject" required>
              </div>

              <div class="form-group">
                <label for="message">Message *</label>
                <textarea id="message" name="message" rows="6" required></textarea>
              </div>

              <button type="submit" class="submit-btn">Send Message</button>
            </form>
          </div>
        </div>

        <!-- Map Section -->
        <div class="map-section">
          <h2>Find Us</h2>
          <div class="map-container">
            <!-- 请在此处添加您教会的 Google Maps 嵌入代码 -->
            <!-- 访问 https://www.google.com/maps 搜索您的地址，然后点击"分享"获取嵌入代码 -->
            <p style="text-align: center; padding: 50px; background: #f5f5f5;">
              请添加 Google Maps iframe 代码<br>
              Please add your Google Maps iframe code here
            </p>
          </div>
        </div>

        <!-- Service Times -->
        <div class="service-times">
          <h2>Service Times</h2>
          <div class="times-grid">
            <div class="time-card">
              <h3>Prayer Meeting</h3>
              <p>Sundays, 9:00 AM</p>
            </div>
            <div class="time-card">
              <h3>Sunday Worship</h3>
              <p>Sundays, 9:30 AM</p>
            </div>
            <div class="time-card">
              <h3>Sunday School</h3>
              <p>Sundays, 11:15 AM</p>
            </div>
            <div class="time-card">
              <h3>Bible Study</h3>
              <p>Wednesdays, 7:00 PM</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-header {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-hover) 100%);
    color: white;
    padding: 8rem 2rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
  }

  .page-header p {
    font-size: 1.25rem;
  }

  .contact-section {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .contact-info-block h2,
  .contact-form-block h2 {
    color: var(--color-accent);
    font-size: 1.8rem;
    margin-bottom: 2rem;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .info-card {
    background: var(--color-bg-soft);
    padding: 2rem;
    border-radius: 12px;
    transition: all 0.3s;
  }

  .info-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(217, 137, 140, 0.15);
  }

  .info-card h3 {
    color: var(--color-accent);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .info-card p {
    margin: 0.5rem 0;
    color: var(--color-text-main);
    line-height: 1.8;
  }

  .info-card a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.3s;
  }

  .info-card a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .pastor-section {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-hover) 100%);
    color: white;
    padding: 2rem;
    border-radius: 12px;
    margin-top: 2rem;
  }

  .pastor-section h3 {
    color: white;
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .pastor-section p {
    margin: 0.75rem 0;
    line-height: 1.8;
  }

  .pastor-section a {
    color: white;
    text-decoration: none;
    border-bottom: 2px solid white;
    transition: all 0.3s;
  }

  .pastor-section a:hover {
    opacity: 0.8;
  }

  /* Contact Form */
  .contact-form-block {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    border: 1px solid var(--color-border);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group label {
    color: var(--color-text-main);
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .form-group input,
  .form-group textarea {
    padding: 0.875rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-family: inherit;
    font-size: 1rem;
    transition: all 0.3s;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 3px rgba(217, 137, 140, 0.1);
  }

  .submit-btn {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-hover) 100%);
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s;
    margin-top: 1rem;
  }

  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(217, 137, 140, 0.3);
  }

  /* Map Section */
  .map-section {
    margin-top: 4rem;
    padding-top: 4rem;
    border-top: 2px solid var(--color-border);
  }

  .map-section h2 {
    color: var(--color-accent);
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .map-container {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  /* Service Times */
  .service-times {
    margin-top: 4rem;
  }

  .service-times h2 {
    color: var(--color-accent);
    font-size: 1.8rem;
    margin-bottom: 2rem;
    text-align: center;
  }

  .times-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
  }

  .time-card {
    background: var(--color-bg-soft);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s;
  }

  .time-card:hover {
    transform: translateY(-4px);
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-hover) 100%);
    color: white;
  }

  .time-card h3 {
    color: var(--color-accent);
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .time-card:hover h3 {
    color: white;
  }

  .time-card p {
    color: var(--color-text-main);
    font-size: 1rem;
    line-height: 1.6;
  }

  .time-card:hover p {
    color: white;
  }

  @media (max-width: 768px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .contact-form-block {
      padding: 2rem;
    }

    .map-container iframe {
      height: 300px !important;
    }

    .times-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('.contact-form') as HTMLFormElement;
    const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
    
    form?.addEventListener('submit', async (e: Event) => {
      e.preventDefault();
      
      if (!submitBtn) return;
      
      // Get form data
      const formData = new FormData(form);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        phone: formData.get('phone') || '',
        subject: formData.get('subject'),
        message: formData.get('message')
      };
      
      // Disable button and show loading state
      submitBtn.disabled = true;
      const originalText = submitBtn.textContent;
      submitBtn.textContent = 'Sending...';
      
      try {
        // Use mailto as default method
        const subject = encodeURIComponent(`[Website Inquiry] ${data.subject}`);
        const body = encodeURIComponent(
          `Name: ${data.name}\n` +
          `Email: ${data.email}\n` +
          `Phone: ${data.phone}\n\n` +
          `Message:\n${data.message}`
        );
        
        window.location.href = `mailto:church@example.com?subject=${subject}&body=${body}`;
        
        // Show success message
        alert('Thank you for your message! We will get back to you soon.');
        
        // Reset form
        form.reset();
      } catch (error) {
        console.error('Error:', error);
        alert('Failed to send message. Please try again later.');
      } finally {
        // Restore button state
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  });
</script>
