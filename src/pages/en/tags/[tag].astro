---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('posts');
  
  // Collect all possible tag values
  const allTags = new Set<string>();
  
  allPosts.forEach(post => {
    // Add regular tags
    post.data.tags?.forEach(tag => allTags.add(tag));
    // Add type
    post.data.type?.forEach(item => allTags.add(item));
    // Add service
    post.data.service?.forEach(item => allTags.add(item));
    // Add speaker
    post.data.speaker?.forEach(item => allTags.add(item));
    // Add series
    post.data.series?.forEach(item => allTags.add(item));
    // Add book
    post.data.book?.forEach(item => allTags.add(item));
  });
  
  return Array.from(allTags).map((tag: string) => ({
    params: { tag },
    props: {
      posts: allPosts.filter(post => 
        post.data.tags?.includes(tag) ||
        post.data.type?.includes(tag) ||
        post.data.service?.includes(tag) ||
        post.data.speaker?.includes(tag) ||
        post.data.series?.includes(tag) ||
        post.data.book?.includes(tag)
      ),
      tag,
    },
  }));
}

const { posts, tag } = Astro.props;
const sortedPosts = posts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<Layout title={`Tag: #${tag} - Church Name`} lang="en">
  <main>
    <div class="page-header">
      <div class="container">
        <h1>#{tag}</h1>
        <p>{posts.length} posts tagged</p>
      </div>
    </div>

    <section class="posts-section">
      <div class="container">
        <div class="posts-grid">
          {sortedPosts.map(post => (
            <article class="post-card">
              {post.data.thumbnail && (
                <a href={`/en/posts/${post.slug}`}>
                  <img src={post.data.thumbnail} alt={post.data.title} />
                </a>
              )}
              <div class="post-content">
                <time datetime={post.data.publishDate.toISOString()}>
                  {post.data.publishDate.toLocaleDateString('en-US')}
                </time>
                <h2>
                  <a href={`/en/posts/${post.slug}`}>{post.data.title}</a>
                </h2>
                {post.data.excerpt && <p>{post.data.excerpt}</p>}
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .page-header {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-hover) 100%);
    color: white;
    padding: 8rem 2rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
  }

  .page-header p {
    font-size: 1.2rem;
  }

  .posts-section {
    padding: 4rem 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card {
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    background: white;
    transition: box-shadow 0.3s;
  }

  .post-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .post-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .post-card a {
    text-decoration: none;
    color: inherit;
  }

  .post-content {
    padding: 1.5rem;
  }

  .post-content time {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .post-content h2 {
    font-size: 1.3rem;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .post-content h2 a {
    color: var(--color-text-main);
    transition: color 0.3s;
  }

  .post-content h2 a:hover {
    color: var(--color-accent);
  }

  .post-content p {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }

    .post-card img {
      height: 150px;
    }
  }
</style>
