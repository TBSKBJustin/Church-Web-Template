---
import Layout from '../../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('posts');
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// Êî∂ÈõÜÊâÄÊúâÁ≠õÈÄâÈÄâÈ°π
const allCategories = [...new Set(allPosts.flatMap(post => post.data.categories))];
const allTypes = [...new Set(allPosts.flatMap(post => post.data.type))];
const allServices = [...new Set(allPosts.flatMap(post => post.data.service))];
const allSpeakers = [...new Set(allPosts.flatMap(post => post.data.speaker))];
const allSeries = [...new Set(allPosts.flatMap(post => post.data.series))];
const allBooks = [...new Set(allPosts.flatMap(post => post.data.book))];
---

<Layout title="All Posts - Church Name" lang="en">
  <main>
    <div class="page-header">
      <div class="container">
        <h1>All Posts</h1>
        <p>Share Church News and Testimonies</p>
      </div>
    </div>

    <section class="posts-section">
      <div class="container-full">
        <!-- ÊêúÁ¥¢ÂíåÊéíÂ∫èÊ†è -->
        <div class="search-bar">
          <div class="search-container">
            <input 
              type="text" 
              id="searchInput" 
              placeholder="Search post title, content..." 
              class="search-input"
            />
            <button class="search-btn">Search</button>
          </div>
          <div class="controls-right">
            <button id="advancedFilterToggle" class="advanced-filter-toggle">
              Advanced Filters
            </button>
            <div class="sort-container">
              <label for="sortSelect">Sort:</label>
              <select id="sortSelect" class="sort-select">
                <option value="newest">Newest to Oldest</option>
                <option value="oldest">Oldest to Newest</option>
              </select>
            </div>
          </div>
        </div>

        <!-- È´òÁ∫ßÁ≠õÈÄâÂô®Âå∫ÂüüÔºàÈªòËÆ§ÈöêËóèÔºâ -->
        <div class="filters-section" id="filtersSection" style="display: none;">
          <!-- È°ûÂûã Type -->
          {allTypes.length > 0 && (
            <div class="filter-group">
              <label class="filter-label">Type:</label>
              <div class="filter-buttons">
                <button class="filter-btn active" data-filter-type="type" data-value="all">All</button>
                {allTypes.map(type => 
                  <button class="filter-btn" data-filter-type="type" data-value={type}>{type}</button>
                )}
              </div>
            </div>
          )}

          <!-- ËÅöÊúÉ Service -->
          {allServices.length > 0 && (
            <div class="filter-group">
              <label class="filter-label">Service:</label>
              <div class="filter-buttons">
                <button class="filter-btn active" data-filter-type="service" data-value="all">All</button>
                {allServices.map(service => 
                  <button class="filter-btn" data-filter-type="service" data-value={service}>{service}</button>
                )}
              </div>
            </div>
          )}

          <!-- Ë¨õÂì° Speaker -->
          {allSpeakers.length > 0 && (
            <div class="filter-group">
              <label class="filter-label">Speaker:</label>
              <div class="filter-buttons">
                <button class="filter-btn active" data-filter-type="speaker" data-value="all">All</button>
                {allSpeakers.map(speaker => 
                  <button class="filter-btn" data-filter-type="speaker" data-value={speaker}>{speaker}</button>
                )}
              </div>
            </div>
          )}

          <!-- Á≥ªÂàó Series -->
          {allSeries.length > 0 && (
            <div class="filter-group">
              <label class="filter-label">Series:</label>
              <div class="filter-buttons">
                <button class="filter-btn active" data-filter-type="series" data-value="all">All</button>
                {allSeries.map(series => 
                  <button class="filter-btn" data-filter-type="series" data-value={series}>{series}</button>
                )}
              </div>
            </div>
          )}

          <!-- Êõ∏ Books -->
          {allBooks.length > 0 && (
            <div class="filter-group">
              <label class="filter-label">Book:</label>
              <div class="filter-buttons">
                <button class="filter-btn active" data-filter-type="book" data-value="all">All</button>
                {allBooks.map(book => 
                  <button class="filter-btn" data-filter-type="book" data-value={book}>{book}</button>
                )}
              </div>
            </div>
          )}
        </div>

        <!-- ÂàÜÈ°µÊéßÂà∂Ê†è -->
        <div class="pagination-controls">
          <div class="items-per-page">
            <label for="itemsPerPage">Show per page:</label>
            <select id="itemsPerPage" class="items-select">
              <option value="20" selected>20</option>
              <option value="60">60</option>
              <option value="100">100</option>
            </select>
          </div>
          <div class="results-info">
            <span id="resultsInfo">Showing 1-20 of 100</span>
          </div>
        </div>

        <div class="youtube-grid" id="postsGrid">
          {sortedPosts.map(post => {
            const postCategories = post.data.categories.join(',');
            const hasThumb = post.data.thumbnail;
            const thumbUrl = post.data.thumbnail || '';
            const postSlug = post.slug;
            const postTitle = post.data.title;
            const postAuthor = post.data.author || '';
            const postDate = post.data.publishDate.toLocaleDateString('en-US');
            const postExcerpt = post.data.excerpt || '';
            const displayCats = post.data.categories.slice(0, 2);
            
            return (
              <article 
                class="video-card" 
                data-categories={postCategories}
                data-type={post.data.type.join(',')}
                data-service={post.data.service.join(',')}
                data-speaker={post.data.speaker.join(',')}
                data-series={post.data.series.join(',')}
                data-book={post.data.book.join(',')}
                data-date={post.data.publishDate.valueOf()}
              >
                <a href={`/en/posts/${postSlug}`} class="thumbnail-link">
                  {hasThumb && <img src={thumbUrl} alt={postTitle} class="thumbnail" />}
                  {!hasThumb && <div class="thumbnail-placeholder">üìÑ</div>}
                </a>
                <div class="video-info">
                  <h3 class="video-title">
                    <a href={`/en/posts/${postSlug}`}>{postTitle}</a>
                  </h3>
                  <div class="video-meta">
                    {postAuthor && <span class="author">{postAuthor}</span>}
                    <time>{postDate}</time>
                  </div>
                  {postExcerpt && <p class="video-description">{postExcerpt}</p>}
                  <div class="video-tags">
                    {displayCats.map(cat => <span class="tag-badge category">{cat}</span>)}
                    {post.data.speaker.slice(0, 2).map(speaker => <span class="tag-badge speaker">{speaker}</span>)}
                    {post.data.book.slice(0, 3).map(book => <span class="tag-badge book">{book}</span>)}
                  </div>
                </div>
              </article>
            );
          })}
        </div>

        <!-- ÂàÜÈ°µÂØºËà™ -->
        <div class="pagination-nav" id="paginationNav">
          <button class="page-btn" id="prevPage" disabled>‚Üê Previous</button>
          <div class="page-numbers" id="pageNumbers"></div>
          <button class="page-btn" id="nextPage">Next ‚Üí</button>
        </div>
      </div>
    </section>

    <!-- YouTube Actions Section -->
    <section class="youtube-actions">
      <div class="container">
        <h2>More Sermons</h2>
        <p class="section-description">Explore more great content on our YouTube channel</p>
        <div class="action-buttons">
          <a href="#" target="_blank" class="btn-youtube btn-recordings">
            Watch Recordings
          </a>
          <a href="#" target="_blank" class="btn-youtube btn-live">
            Watch Live Stream
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const sortSelect = document.getElementById('sortSelect') as HTMLSelectElement;
  const postsGrid = document.getElementById('postsGrid') as HTMLElement;
  const cards = Array.from(postsGrid?.querySelectorAll('.video-card') || []);
  const filterBtns = document.querySelectorAll('.filter-btn');
  const advancedFilterToggle = document.getElementById('advancedFilterToggle') as HTMLButtonElement;
  const filtersSection = document.getElementById('filtersSection') as HTMLElement;
  const itemsPerPageSelect = document.getElementById('itemsPerPage') as HTMLSelectElement;
  const resultsInfo = document.getElementById('resultsInfo') as HTMLElement;
  const prevPageBtn = document.getElementById('prevPage') as HTMLButtonElement;
  const nextPageBtn = document.getElementById('nextPage') as HTMLButtonElement;
  const pageNumbers = document.getElementById('pageNumbers') as HTMLElement;

  // Á≠õÈÄâÂô®Áä∂ÊÄÅ
  const filters = {
    search: '',
    type: 'all',
    service: 'all',
    speaker: 'all',
    series: 'all',
    book: 'all'
  };

  // ÂàÜÈ°µÁä∂ÊÄÅ
  let currentPage = 1;
  let itemsPerPage = 20;
  let filteredCards: HTMLElement[] = [];

  // È´òÁ∫ßÁ≠õÈÄâtoggle
  advancedFilterToggle?.addEventListener('click', () => {
    const isHidden = filtersSection.style.display === 'none';
    filtersSection.style.display = isHidden ? 'block' : 'none';
  });

  // ÊØèÈ°µÊòæÁ§∫Êï∞ÈáèÊîπÂèò
  itemsPerPageSelect?.addEventListener('change', () => {
    itemsPerPage = parseInt(itemsPerPageSelect.value);
    currentPage = 1;
    updatePagination();
  });

  // ÊéíÂ∫èÂäüËÉΩ
  sortSelect?.addEventListener('change', () => {
    const sortValue = sortSelect.value;
    const sortedCards = [...cards].sort((a, b) => {
      const dateA = parseInt((a as HTMLElement).dataset.date || '0');
      const dateB = parseInt((b as HTMLElement).dataset.date || '0');
      return sortValue === 'newest' ? dateB - dateA : dateA - dateB;
    });

    // ÈáçÊñ∞ÊéíÂàóDOM
    sortedCards.forEach(card => postsGrid.appendChild(card));
    
    // Â∫îÁî®ÂΩìÂâçÁ≠õÈÄâ
    applyFilters();
  });

  // ÊêúÁ¥¢ÂäüËÉΩ
  searchInput?.addEventListener('input', (e) => {
    const target = e.target as HTMLInputElement;
    filters.search = target.value.toLowerCase();
    updateAvailableFilters();
    applyFilters();
  });

  // Á≠õÈÄâÊåâÈíÆ‰∫ã‰ª∂
  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const element = btn as HTMLElement;
      const filterType = element.dataset.filterType;
      const value = element.dataset.value;

      if (!filterType || !value) return;

      // Êõ¥Êñ∞ÂêåÁ±ªÊåâÈíÆÁöÑactiveÁä∂ÊÄÅ
      const sameTypeButtons = document.querySelectorAll(`[data-filter-type="${filterType}"]`);
      sameTypeButtons.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Êõ¥Êñ∞Á≠õÈÄâÁä∂ÊÄÅ
      filters[filterType as keyof typeof filters] = value;
      
      // Êõ¥Êñ∞ÂÖ∂‰ªñÁ≠õÈÄâÂô®ÁöÑÂèØÁî®ÈÄâÈ°π
      updateAvailableFilters();
      
      applyFilters();
    });
  });

  // Êõ¥Êñ∞Á≠õÈÄâÂô®ÂèØÁî®ÈÄâÈ°π
  function updateAvailableFilters() {
    // ‰∏∫ÊØè‰∏™Á≠õÈÄâÁ±ªÂûãÂàÜÂà´ËÆ°ÁÆóÂèØÁî®ÈÄâÈ°π
    updateFilterOptionsFor('type');
    updateFilterOptionsFor('service');
    updateFilterOptionsFor('speaker');
    updateFilterOptionsFor('series');
    updateFilterOptionsFor('book');
  }

  // ‰∏∫ÁâπÂÆöÁ≠õÈÄâÁ±ªÂûãÊõ¥Êñ∞ÂèØÁî®ÈÄâÈ°π
  function updateFilterOptionsFor(targetFilterType: string) {
    // Êî∂ÈõÜÁ¨¶ÂêàÂÖ∂‰ªñÁ≠õÈÄâÊù°‰ª∂ÁöÑÊñáÁ´†ÔºàÊéíÈô§ÂΩìÂâçÊ≠£Âú®Êõ¥Êñ∞ÁöÑÁ≠õÈÄâÁ±ªÂûãÔºâ
    const availableCards = cards.filter(card => {
      const element = card as HTMLElement;
      const title = element.querySelector('.video-title')?.textContent?.toLowerCase() || '';
      const description = element.querySelector('.video-description')?.textContent?.toLowerCase() || '';
      
      // ÊêúÁ¥¢ÂåπÈÖç
      const matchesSearch = !filters.search || 
        title.includes(filters.search) || 
        description.includes(filters.search);

      // ÂêÑÁ±ªÁ≠õÈÄâÂåπÈÖçÔºàÊéíÈô§ÁõÆÊ†áÁ≠õÈÄâÁ±ªÂûãÔºâ
      const typeValues = (element.dataset.type || '').split(',').filter(v => v.trim());
      const serviceValues = (element.dataset.service || '').split(',').filter(v => v.trim());
      const speakerValues = (element.dataset.speaker || '').split(',').filter(v => v.trim());
      const seriesValues = (element.dataset.series || '').split(',').filter(v => v.trim());
      const bookValues = (element.dataset.book || '').split(',').filter(v => v.trim());
      
      const matchesType = targetFilterType === 'type' || filters.type === 'all' || typeValues.includes(filters.type);
      const matchesService = targetFilterType === 'service' || filters.service === 'all' || serviceValues.includes(filters.service);
      const matchesSpeaker = targetFilterType === 'speaker' || filters.speaker === 'all' || speakerValues.includes(filters.speaker);
      const matchesSeries = targetFilterType === 'series' || filters.series === 'all' || seriesValues.includes(filters.series);
      const matchesBook = targetFilterType === 'book' || filters.book === 'all' || bookValues.includes(filters.book);

      return matchesSearch && matchesType && matchesService && matchesSpeaker && matchesSeries && matchesBook;
    });

    // Êî∂ÈõÜËØ•Á≠õÈÄâÁ±ªÂûãÁöÑÂèØÁî®ÂÄºÔºàÂ§ÑÁêÜÈÄóÂè∑ÂàÜÈöîÁöÑÂ§öÂÄºÔºâ
    const availableValues = new Set<string>();
    availableCards.forEach(card => {
      const element = card as HTMLElement;
      const value = element.dataset[targetFilterType];
      if (value) {
        // ÂàÜÂâ≤ÈÄóÂè∑ÂàÜÈöîÁöÑÂÄºÂπ∂Ê∑ªÂä†Âà∞ÈõÜÂêà‰∏≠
        value.split(',').filter(v => v.trim()).forEach(v => availableValues.add(v.trim()));
      }
    });

    // Êõ¥Êñ∞ÊåâÈíÆÊòæÁ§∫
    updateFilterButtons(targetFilterType, availableValues);
  }

  // Êõ¥Êñ∞ÁâπÂÆöÁ±ªÂûãÁ≠õÈÄâÂô®ÁöÑÊåâÈíÆÊòæÁ§∫
  function updateFilterButtons(filterType: string, availableValues: Set<string>) {
    const buttons = document.querySelectorAll(`[data-filter-type="${filterType}"]`);
    buttons.forEach(btn => {
      const element = btn as HTMLElement;
      const value = element.dataset.value;
      
      // "ÂÖ®ÈÉ®"ÊåâÈíÆÂßãÁªàÊòæÁ§∫
      if (value === 'all') {
        element.style.display = '';
        return;
      }
      
      // ÂÖ∂‰ªñÊåâÈíÆÊ†πÊçÆÊòØÂê¶Âú®ÂèØÁî®ÂÄº‰∏≠ÂÜ≥ÂÆöÊòæÁ§∫/ÈöêËóè
      if (value && availableValues.has(value)) {
        element.style.display = '';
      } else {
        element.style.display = 'none';
      }
    });
  }

  // Â∫îÁî®ÊâÄÊúâÁ≠õÈÄâ
  function applyFilters() {
    filteredCards = [];
    
    cards.forEach(card => {
      const element = card as HTMLElement;
      const title = element.querySelector('.video-title')?.textContent?.toLowerCase() || '';
      const description = element.querySelector('.video-description')?.textContent?.toLowerCase() || '';
      
      // ÊêúÁ¥¢ÂåπÈÖç
      const matchesSearch = !filters.search || 
        title.includes(filters.search) || 
        description.includes(filters.search);

      // ÂêÑÁ±ªÁ≠õÈÄâÂåπÈÖçÔºàÂ§ÑÁêÜÈÄóÂè∑ÂàÜÈöîÁöÑÂ§öÂÄºÔºâ
      const typeValues = (element.dataset.type || '').split(',').filter(v => v.trim());
      const serviceValues = (element.dataset.service || '').split(',').filter(v => v.trim());
      const speakerValues = (element.dataset.speaker || '').split(',').filter(v => v.trim());
      const seriesValues = (element.dataset.series || '').split(',').filter(v => v.trim());
      const bookValues = (element.dataset.book || '').split(',').filter(v => v.trim());
      
      const matchesType = filters.type === 'all' || typeValues.includes(filters.type);
      const matchesService = filters.service === 'all' || serviceValues.includes(filters.service);
      const matchesSpeaker = filters.speaker === 'all' || speakerValues.includes(filters.speaker);
      const matchesSeries = filters.series === 'all' || seriesValues.includes(filters.series);
      const matchesBook = filters.book === 'all' || bookValues.includes(filters.book);

      // Êî∂ÈõÜÁ¨¶ÂêàÊù°‰ª∂ÁöÑÂç°Áâá
      if (matchesSearch && matchesType && matchesService && matchesSpeaker && matchesSeries && matchesBook) {
        filteredCards.push(element);
      }
    });

    // ÈáçÁΩÆÂà∞Á¨¨‰∏ÄÈ°µ
    currentPage = 1;
    updatePagination();
  }

  // Êõ¥Êñ∞ÂàÜÈ°µÊòæÁ§∫
  function updatePagination() {
    const totalItems = filteredCards.length;
    const totalPages = Math.ceil(totalItems / itemsPerPage);
    const startIndex = (currentPage - 1) * itemsPerPage;
    const endIndex = Math.min(startIndex + itemsPerPage, totalItems);

    // ÈöêËóèÊâÄÊúâÂç°Áâá
    cards.forEach(card => {
      (card as HTMLElement).style.display = 'none';
    });

    // Âè™ÊòæÁ§∫ÂΩìÂâçÈ°µÁöÑÂç°Áâá
    for (let i = startIndex; i < endIndex; i++) {
      filteredCards[i].style.display = 'block';
    }

    // Êõ¥Êñ∞ÁªìÊûú‰ø°ÊÅØ
    if (totalItems === 0) {
      resultsInfo.textContent = 'No posts found';
    } else {
      resultsInfo.textContent = `Showing ${startIndex + 1}-${endIndex} of ${totalItems}`;
    }

    // Êõ¥Êñ∞ÂàÜÈ°µÊåâÈíÆÁä∂ÊÄÅ
    prevPageBtn.disabled = currentPage === 1;
    nextPageBtn.disabled = currentPage === totalPages || totalPages === 0;

    // ÁîüÊàêÈ°µÁ†ÅÊåâÈíÆ
    renderPageNumbers(totalPages);
  }

  // Ê∏≤ÊüìÈ°µÁ†Å
  function renderPageNumbers(totalPages: number) {
    pageNumbers.innerHTML = '';
    
    if (totalPages <= 1) return;

    // ÊúÄÂ§öÊòæÁ§∫7‰∏™È°µÁ†Å
    let startPage = Math.max(1, currentPage - 3);
    let endPage = Math.min(totalPages, currentPage + 3);

    if (currentPage <= 4) {
      endPage = Math.min(7, totalPages);
    }
    if (currentPage > totalPages - 4) {
      startPage = Math.max(1, totalPages - 6);
    }

    // Á¨¨‰∏ÄÈ°µ
    if (startPage > 1) {
      addPageButton(1);
      if (startPage > 2) {
        pageNumbers.innerHTML += '<span class="page-ellipsis">...</span>';
      }
    }

    // ‰∏≠Èó¥È°µÁ†Å
    for (let i = startPage; i <= endPage; i++) {
      addPageButton(i);
    }

    // ÊúÄÂêé‰∏ÄÈ°µ
    if (endPage < totalPages) {
      if (endPage < totalPages - 1) {
        pageNumbers.innerHTML += '<span class="page-ellipsis">...</span>';
      }
      addPageButton(totalPages);
    }
  }

  function addPageButton(page: number) {
    const btn = document.createElement('button');
    btn.className = `page-number ${page === currentPage ? 'active' : ''}`;
    btn.textContent = page.toString();
    btn.addEventListener('click', () => {
      currentPage = page;
      updatePagination();
      postsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
    pageNumbers.appendChild(btn);
  }

  // ‰∏ä‰∏ÄÈ°µ
  prevPageBtn?.addEventListener('click', () => {
    if (currentPage > 1) {
      currentPage--;
      updatePagination();
      postsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });

  // ‰∏ã‰∏ÄÈ°µ
  nextPageBtn?.addEventListener('click', () => {
    const totalPages = Math.ceil(filteredCards.length / itemsPerPage);
    if (currentPage < totalPages) {
      currentPage++;
      updatePagination();
      postsGrid.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }
  });

  // ÂàùÂßãÂåñ
  updateAvailableFilters();
  applyFilters();
</script>

